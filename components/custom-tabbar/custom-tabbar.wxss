.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 150rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-radius: 80rpx 80rpx 0 0;
  border-top: 1px solid #eaeaea;
  z-index: 9999;
  box-shadow:  0px -5px 10px rgba(0,0,0,0.07);
}

