.yellow-container {
  background-color: #f8d35f;
}

#dog {
  width: 137.09px;
  height: 143.87px;
  margin-left: 187.5px;
  margin-top: 120px;
  margin-bottom: 45rpx;
}

.white-container {
  border-radius: 70rpx 70rpx 0 0;
  box-sizing: border-box;
  width: 100%;
  margin-top: -50rpx;
  padding: 29px 44px;
  height: 100vh;
  background-color: #ffffff;
}

.title-container {
  display: flex;
  align-items: baseline;
  margin-bottom: 23px;
}

.yellow-circle {
  height: 10px;
  width: 10px;
  background-color:#F8D35F;
  border-radius: 50%;
  margin-right: 16px;
}

.top-title {
  font-family: 'Playfair Display';
  font-size: 19px;
  font-weight: bold;
}

.dog-card {
  display: flex;
  /* align-items: baseline; */
  border-radius: 16px;
  padding-top: 20px;
  padding-left: 20px;
  padding-bottom: 20px;
  background-color:#F1F1F0;
  width: 100%;
  align-items: center;
}

#dog-photo {
  height: 100px;
  width: 100px;
  border-radius: 10px;
  margin-right: 14px;
}

.dog-name {
  font-size: 18px;
  font-weight: bold;
  font-family: "Playfair Display";
  width: 100%;
}

.dog-more {
  color: #B6B1B1;
  font-size: 16px;
  width: 100%;
  margin-top: 4px;
}

