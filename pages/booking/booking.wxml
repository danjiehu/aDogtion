<!--pages/booking/booking.wxml-->

<view class="yellow-container">
  <image id="dog" src="/images/dog.png"></image>
</view>

<!-- start of white container -->
<view class="white-container">
  <view class="title-container">
    <view class="yellow-circle"></view>
    <view class="top-title">Booking your appointment</view>
  </view>

  <!-- start of selected dog card -->
  <view class="dog-card">
    <image id="dog-photo" src="/images/coco.jpg"></image>
    <view>
      <view class="dog-name">Coco</view>
      <view class="dog-more">1 year â€¢ Male</view>
    </view>
  </view>
  <!-- end of selected dog card -->

  <!-- start of form-container -->
  <view class="form-container">
  <form bindsubmit="submit">

    <view class="title">DATE</view>
    <!-- <input type="text" placeholder="input date" /> -->
    <!-- start of date picker -->
      <view class="date-container">
        <picker mode="date" value="{{date}}" start="2021-04-01" end="2022-04-01" bindchange="bindDateChange">
          <view wx:if="{{selectedDate}}" class="dateInput">
            {{selectedDate}}
          </view>
          <view wx:else class="dateInput">
              tap to select your visit date
          </view>
        </picker>
        <image id="arrow-right" src="/images/arrow_right.png" mode="aspectFit"></image>
      </view>
    <!-- end of date picker -->

    <view>horizontal scroll</view>

    <button id="button" form-type="submit">BOOK</button>
  </form>
  </view>
   <!-- end of form-container -->

</view>
<!-- end of white container -->