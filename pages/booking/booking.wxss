/* pages/booking/booking.wxss */

page {
  color: #131313;
}

.yellow-container {
  background-color: #f6c752;
  height: 35vh;
  position: relative;height: 65vh + 50rpx;
}

.playfair {
  font-family: "Playfair display";
}

.dog {
  width: 240rpx;
  height: 260rpx;
  background-size: cover;
  margin: 0 20rpx 0 30%;
  position: absolute;
  right: 100rpx;
  bottom: 50rpx;
  /* position: fixed;
  top: 344rpx;
  right: 100rpx; */
}

.white-container {
  position: relative;
  border-radius: 70rpx 70rpx 0 0;
  box-sizing: border-box;
  width: 100%;
  margin-top: -50rpx;
  padding: 60rpx 90rpx 300rpx 90rpx;
  height: 65vh + 50rpx;
  background-color: #ffffff;
  padding-bottom: 0px;
}

.title-container {
  display: flex;
  align-items: baseline;
  margin-bottom: 50rpx;
}

.yellow-circle {
  height: 20rpx;
  width: 20rpx;
  background-color:#F8D35F;
  border-radius: 50%;
  margin-right: 30rpx;
}

.top-title {
  font-size: 20pt;
}

.dog-card {
  display: flex;
  /* align-items: baseline; */
  border-radius: 30rpx;
  padding: 30rpx;
  background-color:#F1F1F0;
  width: 100%;
  align-items: center;
  box-sizing: border-box;
}

.dog-photo {
  height: 160rpx;
  width: 160rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.dog-name {
  font-size: 12pt;
  width: 100%;
}

.dog-more {
  color: #B6B1B1;
  font-size: 10pt;
  width: 100%;
  margin-top: 10rpx;
}

.form-container {
  margin-top: 50rpx;
}

/* start of input name */
.title {
  color: #B6B1B1;
  font-size: smaller;
  margin-bottom: 20rpx;
}

.date-container {
  display: flex;
}

picker {
  width: 100%;
}

.dateInput {
  font-size: medium;
  margin-bottom: 50rpx;
  color: #24241E;
  font-weight: bold;
  border-bottom: 1px solid #E4E4E4;
  padding-bottom: 15rpx;
}

.arrow-right {
  width: 16rpx;
  height: 36rpx;
  position: absolute;
  right: 90rpx;
}
/* end of input message */

.album {
  white-space: nowrap;
}

.btn-yellow {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 80%;
  height: 150rpx;
  padding: 40rpx 0 0 0;
  box-sizing: border-box;
  border-radius: 50rpx 0 0 0;
  background-color: #f6c752;
}

.scroll-view_H{
  white-space: nowrap;
  /* width: 100vw; */
}

.scroll-view-item_H{
  /* width: 45%; */
  /* height: 300rpx; */
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  background-color: #F1F1F0;
  text-align: center;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  line-height: 60rpx; 
  /* do NOT change line-height */
  border-radius: 70rpx;
}

.selected {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  background-color: #f6c752;
  text-align: center;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  line-height: 60rpx; 
  /* do NOT change line-height */
  border-radius: 70rpx;
}
