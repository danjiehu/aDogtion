.title-container {
  width: 80%;
  margin: -242rpx auto 30rpx auto;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.icontag{
  width: 30rpx;
  height: 30rpx;
}

.titletag{
  font-size: 20pt;
}

.filters:hover{
  opacity: 0.7;
  transform: scale(0.98);
}

