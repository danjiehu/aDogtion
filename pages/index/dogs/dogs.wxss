.yellow-tagcontainer {
  height: 7vh;
  background-color: #f6c752;
  width: 100%;
  box-sizing: border-box;
}

.grey-tagcontainer {
  margin-top: -50rpx;
  z-index: 10;
  border-radius: 70rpx 70rpx 0 0;
  background-color: #F1F1F0;
  padding: 70rpx 0 200rpx 0;
