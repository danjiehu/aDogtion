/* pages/dogs/dogs.wxss */
page {
  width: 100%;
  box-sizing: border-box;
}

.yellow-container {
  height: 14vh;
  background-color: #f6c752;
  width: 100%;
  box-sizing: border-box;
}

.grey-container {
  margin-top: -50rpx;
  z-index: 10;
  border-radius: 70rpx 70rpx 0 0;
  background-color: #F1F1F0;
  padding: 70rpx 0 200rpx 0;
  width: 100%;
  box-sizing: border-box;
  min-height: 80vh;
}

.top-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
}

.title {
  font-size: 20pt;
  margin: 0 0 0 80rpx;
  width: 100%;
  box-sizing: border-box;
}

.filters {
  color: #B6B1B1;
  font-size: 11pt;
}

.sub-title {
  margin: 10rpx 0 0 80rpx;
  font-size: 15pt;
  font-weight: 600;
  display: inline-block;
}

.yellow-line {
  width: 60rpx;
  height: 20rpx;
  background-color: #f6c752;
  margin: -13rpx 0 0 80rpx;
  z-index: 0;
}

.cards-masonry {
  padding: 60rpx 70rpx 100rpx 70rpx;
  column-count: 2;
  column-gap: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.card {
  box-sizing: border-box;
  /* padding-bottom: 30rpx; */
  width: 100%;
  display: inline-block;
}

.card:hover{
  opacity: 0.85;
  transform: scale(0.98);
}

.img-full {
  border-radius: 32rpx 32rpx 0 32rpx;
  width: 100%;
  z-index: 0;
  filter: brightness(80%);
  margin: 0;
}
