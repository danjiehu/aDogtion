  width: 70%;
  margin: 0 auto;
}

.playfair {
  font-family: "Playfair display";
}

.bold {
  font-weight: bold;
}

.subtitle-tag{
  font-size: small;
  margin: 72rpx 0 20rpx;
}

.tag {
  background-color: #FFF;
  padding: 30rpx 42rpx;
  border-radius: 8rpx;
  font-size: 11pt;
  margin-right: 16rpx;
}

.center-tag {
  margin: 0 auto;
  box-sizing: border-box;
  width: 45%;
}

.tag-container {
  display: flex;
}

.yellow-tag {
  background-color: #f6c752
}

.buttontag {
  padding: 30rpx 80rpx;
  border-radius: 500rpx;
  font-size: larger;
  color: #24241E;
  margin-top: 170rpx;
}

.selected {
  background-color: #f6c752;
  padding: 30rpx 42rpx;
  border-radius: 8rpx;
  font-size: 11pt;
  margin-right: 16rpx;
}

.animation-slide-top {
  animation-name: slide-top
}

.animation-slide-bottom {
  animation-name: slide-bottom
}

.animation-slide-left {
  animation-name: slide-left
}

.animation-slide-right {
