.top-title {
  font-size: 20pt;
}

.dog-card {
  display: flex;
  /* align-items: baseline; */
  border-radius: 30rpx;
  padding: 50rpx 50rpx 20rpx 50rpx;
  background-color:#FFFFFF;
  width: 100%;
  align-items: center;
  box-sizing: border-box;
}

.dog-photo {
  height: 160rpx;
  width: 160rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
}

.dog-name {
  font-size: 12pt;
  width: 100%;
}

.dog-more {
  color: #B6B1B1;
  font-size: 10pt;
  width: 100%;
  margin-top: 10rpx;
}

.info-card{
  padding: 0 60rpx;
}

.info-container {
  background-color: #FFFFFF;
  margin-top: 30rpx;
  display: flex;
  align-items: baseline;
}

.title {
  font-size: medium;
  margin-left: 20rpx;
  color: #000;
  font-weight: bold;
  /* margin-bottom: 34rpx; */
  /* margin-top: 30rpx; */
  /* display: inline-block; */
}

.alert {
  margin-top: 5rpx;
  font-size: medium;
  color: red;
}

