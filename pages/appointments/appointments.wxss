/* pages/contact/contact.wxss */
page {
  color: #131313;
}

.empty{
  width: 200rpx;
  height: 177rpx;
  margin: 150rpx auto;
  display: block;
  padding-bottom: 20rpx;
}

.empty-txt{
  text-align: center;
}

.top-btn {
  position: fixed;
  top: 5%;
  left: 5%;
  height: 32rpx;
  width: 48rpx;
  margin: 4% 0 0 10rpx;
  padding: 0;
}

.yellow-container {
  background-color: #f6c752;
  height: 15vh;
  position: relative;
}

.playfair {
  font-family: "Playfair display";
}

.dog {
  width: 240rpx;
  height: 260rpx;
  background-size: cover;
  margin: 0 20rpx 0 30%;
  position: absolute;
  right: 100rpx;
  bottom: 50rpx;
}

.grey-container {
  position: relative;
  border-radius: 70rpx 70rpx 0 0;
  box-sizing: border-box;
  width: 100%;
  margin-top: -50rpx;
  padding: 60rpx 90rpx 300rpx 90rpx;
  height: 100vh;
  background-color: #F1F1F0;
  padding-bottom: 0px;
}

.appoinment-card{
  background-color: #FFFFFF;
  margin-top: 46rpx;
  border-radius: 48rpx;
}

.location-icon {
  width: 28rpx;
  height: 34rpx;
}

.clock-icon{
  width: 28rpx;
  height: 28rpx;
}

