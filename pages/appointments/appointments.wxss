.btn {
  display: inline-block;
  border-radius: 50rpx;
  font-family: "Playfair Display";
  font-weight: bold;
  padding: 20rpx 50rpx;
  background-color: #F1F1F0;
  margin: 50rpx 0 50rpx 0;
  text-align: center;
  position: relative;
  left: 55%;}

.btn-hover{
  display: inline-block;
  border-radius: 50rpx;
  font-family: "Playfair Display";
  font-weight: bold;
  padding: 20rpx 50rpx;
  background-color: #f6c752;
  margin: 50rpx 0 50rpx 0;
  text-align: center;
}

