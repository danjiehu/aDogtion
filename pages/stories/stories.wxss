/* swiper styles */

.swiper-wrapper {
  height: auto;
  position: relative;
  background-color: #000000;
}
 
.swipers {
  height: 50vh;
  opacity: 0.65;
}
 
.swiper-wrapper image {
  width: 100%;
  height: 100%;
  
}
 
.swiper-image{
  background-position: top;
}

.dots {
  height: 20rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  justify-content: space-evenly;
  left: 50%;
  transform: translateX(-50%);
  bottom: 125rpx;
}
 
/* dot css */

.dot {
  margin-top: 15rpx;
  margin-bottom: 20rpx;
  width: 7px;
  height: 7px;
  border-radius: 100%;
  margin-right: 16rpx;
  background-color: #fff;
}
 
