page {
  color: #24241E;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.yellow-container {
  height: 14vh;
  background-color: #f6c752;
  width: 100%;
  box-sizing: border-box;
}

.grey-container {
  margin-top: -50rpx;
  z-index: 10;
  border-radius: 70rpx 70rpx 0 0;
  background-color: #F1F1F0;
  padding: 70rpx 0 200rpx 0;
  width: 100%;
  box-sizing: border-box;
  min-height: 80vh;
}

.top-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
}

.title {
  font-size: 20pt;
  margin: 0 0 0 80rpx;
  width: 100%;
  box-sizing: border-box;
}

.playfair {
  font-family: "Playfair display";
}

.bold{
  font-weight: 600;
}

.subtitle{
  text-transform: uppercase;
  margin-left: 58rpx;
  padding: 16rpx 0;
  opacity: 0.5;
}

.top-btn {
  position: fixed;
  top: 5%;
  left: 5%;
  height: 40rpx;
  width: 60rpx;
  margin: 2% 0 0 10rpx;
  padding: 0;
}







