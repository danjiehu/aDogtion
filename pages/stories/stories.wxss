/* dog details css */

.white-container {
  margin: -70rpx auto;
  z-index: 10;
  border-radius: 50rpx 50rpx 0 0;
  background-color: #fff;
  padding: 60rpx 12px;
  min-height: 50vh;
  width: 100;
  box-sizing: border-box;
  position: absolute;
}


.small-txt{
  font-size: 9pt;
}

.grey-txt{
  color: #9e9e9f;
  font-size: medium;
  line-height: 1.4em;
}

.cards-masonry {
  padding: 40rpx 70rpx 100rpx 70rpx;
  column-count: 2;
  column-gap: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.card {
  box-sizing: border-box;
  padding: 10rpx 0;
  width: 100%;
  display: inline-block;
}

.img-full {
  border-radius: 32rpx 32rpx 0 32rpx;
  width: 100%;
  z-index: 0;
  filter: brightness(80%);
}

.dog-age-gender {
  /* margin: 0; */
  z-index: 100;
  position: relative;
  bottom: 115rpx;
  /* right: 0; */
  width: 90%;
  color: white;
  font-size: 9pt;
  text-align: right;
  text-transform: uppercase;
}

.mini-flex {
  display: flex;
  justify-content: space-between;
}

.dog-name-yellow {
  background-color: #f6c752;
  padding: 16rpx 40rpx 16rpx 90rpx;
  border-radius: 0 0 0 36rpx;
  font-size: 10pt;
  margin-top: -10rpx;
}



