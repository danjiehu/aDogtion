/* pages/dog/dog.wxss */
page {
  color: #24241E;
  width: 100%;
  box-sizing: border-box;
}

.photo-background {
  /* height: 60vh; */
  border-radius: 72rpx 0 0 72rpx;
  width: 100vw;
  box-sizing: border-box;
  z-index: 0;
  
}
 
.playfair {
  font-family: "Playfair display";
}

.larger {
  font-size: larger;
}

/* swiper styles */

.swiper-wrapper {
  height: auto;
  position: relative;
  background-color: #000000;
}
 
.swipers {
  height: 50vh;
  opacity: 0.65;
}
 
.swiper-wrapper image {
  width: 100%;
  height: 100%;
  
}
 
.swiper-image{
  background-position: top;
}

.dots {
  height: 20rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  justify-content: space-evenly;
  left: 50%;
  transform: translateX(-50%);
  bottom: 125rpx;
}
 
/* dot css */

.dot {
  margin-top: 15rpx;
  margin-bottom: 20rpx;
  width: 7px;
  height: 7px;
  border-radius: 100%;
  margin-right: 16rpx;
  background-color: #fff;
}
 
/* active dot css  */
 
.active {
  background-color: #F6C752;
  width: 9px;
  height: 9px;
}

input {
  font-size: 11pt;
  padding-bottom: 20rpx;
}

.new-comment-flexbox {
  display: flex;
  align-content: baseline;
  padding: 20rpx;
}

/* dog details css */

.white-container {
  margin-top: -70rpx;
  z-index: 10;
  border-radius: 70rpx 70rpx 0 0;
  background-color: #fff;
  padding: 50rpx 0;
  min-height: 63vh;
  width: 100%;
  box-sizing: border-box;
  position: absolute;
}

/* icons css */

.btn-fav{
  background-color: #f6c752;
  border-radius: 14rpx;
  height: 48rpx;
  width: 48rpx;
  padding: 36rpx;
  position: absolute;
  top: -6%;
  left: 70%;
  transition: transform 0.1s ease 0ms;
}

.btn-fav:hover{
  transform: scale(0.95);
}

.icon-container{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 50rpx;
  margin-bottom: 30rpx;
  margin-right: 90rpx;
  box-sizing: border-box;
  width: 86%;
}

.two-icons-container{
  background-color: #F6C752;
}

.two-icons{
  display: flex;
  /* margin-right: 100rpx; */
}

.icon-small{
  height: 36rpx;
  width: 36rpx;
  margin-right: 10rpx;
  padding: 0;
}

.title {
  font-size: 18pt;
  /* font-weight: 600; */
  margin: 0 0 0 80rpx;
  width: 80%;
  box-sizing: border-box;
}

.small-txt{
  font-size: 11pt;
}

.detail-txt {
  font-size: 10pt;
  margin-top: 10rpx;
}

.grey-txt{
  color: #9e9e9f;
  font-size: 11pt;
  line-height: 1.4em;
}

.grey {
  color: #9e9e9f;
}

.mini-flex {
  display: flex;
  justify-content: space-between;
  margin-left: 84rpx;
  align-items: center;
}

.left-border-box {
  margin: 16rpx 70rpx 16rpx 113rpx;
  border-left: 1px solid #707070;
  padding-left: 30rpx;
}

.bold{
  font-weight: 600;
}


.border-shadow {
  border: 1px solid #24241E;
  width: 76%;
  box-sizing: border-box;
  padding: 60rpx 70rpx;
  margin: 40rpx 70rpx;
  border-radius: 22rpx;
  z-index: 0;
  height: 137rpx;
}

.grey-container {
  background-color: #F1F1F0;
  width: 76%;
  box-sizing: border-box;
  padding: 40rpx 70rpx;
  margin: -154rpx auto 30rpx auto;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-details{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-right: 90rpx;
}

.btn-grey{
  background-color: #f1f1f0;
  border-radius: 100rpx;
  padding: 20rpx 36rpx;
  margin-right: 16rpx;
}

.tags-container{
  width: 76%;
  box-sizing: border-box;
  margin: 30rpx auto;
  display: flex;
}

.yellow-btn {
  display: flex;
  position: fixed;
  bottom: 0;
  right: 0;
  /* width: 80%; */
  height: 150rpx;
  padding: 40rpx 100rpx 0 100rpx;
  box-sizing: border-box;
  border-radius: 50rpx 0 0 0;
  background-color: #f6c752;
  align-items: flex-start;
  justify-content: space-evenly;
}

.yellow-btn:hover{
  color: rgba(70, 70, 70, 0.8);
}

.right-border {
  border-right: 1px solid #24241E;
  height: 40rpx;
  padding-right: 70rpx;
  margin-right: 70rpx;
}

.top-btn {
  position: fixed;
  top: 5%;
  left: 5%;
  height: 40rpx;
  width: 60rpx;
  margin: 2% 0 0 10rpx;
  padding: 0;
}

.top-btn-share {
  position: fixed;
  top: 5%;
  right: 26%;
  height: 50rpx;
  width: 50rpx;
  margin: 1% 0 0 10rpx;
  padding: 0;
  z-index: 1;
}

.top-btn-share:hover {
  opacity: 0.3;
  transform: scale(0.98);
}

.transparent {
  position: fixed;
  top: 5%;
  right: 23%;
  height: 71rpx;
  margin: 1% 0 0 10rpx;
  padding: 0;
  opacity: 0;
  z-index: 2;
}
.caps {
  text-transform: uppercase;
}


.adopt-text {
  font-size: 9pt;
  color: #9e9e9e;
  text-align: right;
  padding: 20rpx 140rpx 20rpx 80rpx;
  width: 70%;
  box-sizing: border-box;
  text-transform: uppercase;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: white;
  height: 160rpx;
